@page "/regles/{RegleId}/"

@using CharHammer.Components.Regle

@inject ReglesService Service
@code {
    [Parameter, EditorRequired] public string RegleId { get; set; } = null!;

    private RegleDto _regle = null!;

    protected override void OnParametersSet()
    {
        _regle = Service.GetRegle(int.Parse(RegleId));
    }
}
<TopRowTitleSection Title=@_regle.Titre />
<RegleDetail Item=@_regle />
