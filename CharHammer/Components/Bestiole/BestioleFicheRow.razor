@code {
    [Parameter, EditorRequired] public IEnumerable<BestioleDto> Items { get; set; } = null!;
    [Parameter] public int Index { get; set; }
}
@if (Items.Count() > Index)
{
    <div class="row mt-3">
        <div class="col-6">
            <BestioleFicheCard Bestiole=@Items.ElementAt(Index) />
        </div>
        <div class="col-6">
            @if (Items.Count() > Index+1)
            {
                <BestioleFicheCard Bestiole=@Items.ElementAt(Index+1) />
            }
        </div>
    </div>
}