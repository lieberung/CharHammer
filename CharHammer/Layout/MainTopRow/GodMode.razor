@inject AppState AppState
@code{
    private void OnPasswordChange(ChangeEventArgs args)
    {
        AppState.PretendreEtreUnDieu(Convert.ToString(args.Value) ?? string.Empty);
    }
}
<span class="btn-group">
    <LockIcon Unlocked=@AppState.JeSuisDieu />
    <input placeholder="Password" @onchange="OnPasswordChange" class="ms-2 w-5rem rounded@(AppState.JeSuisDieu ? " invisible" : "")" />
</span>