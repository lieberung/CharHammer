@page "/lieux"

@using BlazorWjdr.Models
@using BlazorWjdr.Services
@using BlazorWjdr.Components.Lieu

@inject LieuxService _lieuxService

<div class="top-row px-4">
    <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
</div>

<div class="content px-4">
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Nom</th>
            <th>Type</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var lieu in _lieuxLines.Where(l => l.ParentsCount == 0).OrderBy(r => r.Nom))
        {
            <LieuRow Item="@lieu"/>
        }
        </tbody>
    </table>
</div>


@code {
    private LieuDto[] _lieuxLines = null!;

    protected override async Task OnInitializedAsync()
    {
        _lieuxLines = await _lieuxService.Items();
    }

}