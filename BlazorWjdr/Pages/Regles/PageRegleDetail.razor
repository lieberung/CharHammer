@page "/regles/{RegleId}/"

@using BlazorWjdr.Components.Regle

@inject ReglesService _reglesService
@inject AppState _appState
@code {
    [Parameter, EditorRequired] public string RegleId { get; set; } = null!;

    private RegleDto _regle = null!;

    protected override void OnParametersSet()
    {
        _regle = _reglesService.GetRegle(int.Parse(RegleId));
        _appState.SetMainTopRowTitle(_regle.Titre);
    }
}
<RegleDetail Item=@_regle />
