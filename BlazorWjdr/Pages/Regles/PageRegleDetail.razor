@page "/regles/{RegleId}/"

@using BlazorWjdr.Services
@using BlazorWjdr.Models
@using BlazorWjdr.Components.Regle

@inject ReglesService _reglesService

<MainTopRow Title="@_regle.Titre"/>

<div class="content">
    <RegleDetail Item="@_regle"/>    
</div>

@code {
    [Parameter]
    public string RegleId { get; set; } = null!;

    private RegleDto _regle = null!;

    protected override void OnParametersSet()
    {
        _regle = _reglesService.GetRegle(int.Parse(RegleId));
        base.OnParametersSet();
    }
}