@page "/regles/creation-de-personnage/{RaceId}/"

@inject RacesService _racesService
@inject AppState _appState
@code {
    [Parameter, EditorRequired] public string RaceId { get; set; } = null!;

    private RaceSelectionnee Selection = null!;

    protected override void OnInitialized()
    {
        _appState.SetMainTopRowTitle("Création de personnage");
        base.OnInitialized();
    }

    protected override void OnParametersSet()
    {
        var race = _racesService.GetRace(int.Parse(RaceId));
        Selection = new(race);
    }
}
