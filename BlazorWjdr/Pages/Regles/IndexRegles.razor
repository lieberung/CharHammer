@page "/regles/"

@inject ReglesService _reglesService
@inject AppState _appState
@code {
    protected override void OnInitialized()
    {
        _appState.SetMainTopRowTitle("Règles en vrac");
    }
}
<table class="table table-striped">
    <tbody>
    @foreach (var regle in _reglesService.AllRegles.OrderBy(r => r.Titre))
    {
        <tr>
            <td><a href="regles/@regle.Id/">@regle.Titre</a></td>
        </tr>
    }
    </tbody>
</table>
