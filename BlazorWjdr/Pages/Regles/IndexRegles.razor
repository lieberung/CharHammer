@page "/regles/"

@inject ReglesService Service
@inject AppState AppState
@code {
    protected override void OnInitialized()
    {
        AppState.SetMainTopRowTitle("Règles en vrac");
    }
}
<table class="table table-striped">
    <tbody>
    @foreach (var regle in Service.AllRegles.OrderBy(r => r.Titre))
    {
        <tr>
            <td><a href="regles/@regle.Id/">@regle.Titre</a></td>
        </tr>
    }
    </tbody>
</table>
