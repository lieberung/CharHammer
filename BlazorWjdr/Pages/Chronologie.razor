@page "/chronologie"

@using BlazorWjdr.Models
@using BlazorWjdr.Services
@inject ChronologieService _chronologieService

<MainTopRow>
    <span class="title-primary top-row-title">Chronologie</span>
</MainTopRow>

<div class="content px-4">
    <table class="table">
        <thead>
            <tr>
                <th>Période</th>
                <th>Evènement</th>
                <th>Titre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chrono in _lines)
            {
                <tr>
                    <td>@chrono.Periode</td>
                    <td>@chrono.Resume</td>
                    <td>@chrono.Titre</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private ChronologieDto[] _lines = null!;

    protected override async Task OnInitializedAsync()
    {
        _lines = await _chronologieService.GetLines();
    }
}
