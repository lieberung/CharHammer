@page "/chronologie"

@using BlazorWjdr.Models
@using BlazorWjdr.Services
@inject ChronologieService ChronologieService

<MainTopRow>
    <h3>Chronologie</h3>
</MainTopRow>

<div class="content px-4">
    <table class="table">
        <thead>
            <tr>
                <th>Période</th>
                <th>Evènement</th>
                <th>Titre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chrono in chronologieLines)
            {
                <tr>
                    <td>@chrono.Periode</td>
                    <td>@chrono.Resume</td>
                    <td>@chrono.Titre</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private ChronologieDto[] chronologieLines = null!;

    protected override async Task OnInitializedAsync()
    {
        chronologieLines = await ChronologieService.GetLines();
    }
}
