@page "/carrieres/{CarriereId}/"

@using BlazorWjdr.Components.Carriere
@using BlazorWjdr.Components.Competence
@using BlazorWjdr.Components.Talent

<MainTopRow>
    <span class="title-primary top-row-title">@Carriere.Nom</span>
</MainTopRow>

<div class="content px-4">

    <div class="_container">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <CarriereRestriction Item="@Carriere"/>
            </div>
            <div class="col-1"></div>
        </div>

        <div class="row">
            <div class="col-5">
                <div class="card-body">
                    <h5 class="card-title">Description</h5>
                    <CarriereDescription Item="@Carriere"/>
                </div>
            </div>
            <div class="col-7">
                <div class="card-body">
                    <h5 class="card-title">Plan de carrière</h5>
                    <Profil PlanDeCarriere="@Carriere.PlanDeCarriere"/>
                </div>

                <div class="card-body">
                    <h5 class="card-title">Compétences</h5>
                    <CompetenceItemList Items="@Carriere.Competences.ToArray()" ItemsChoix="@Carriere.ChoixCompetences.ToArray()" />
                </div>
                
                <div class="card-body">
                    <h5 class="card-title">Talents</h5>
                    <TalentItemList Items="@Carriere.Talents.ToArray()" ItemsChoix="@Carriere.ChoixTalents.ToArray()" />
                </div>
                
                <div class="card-body">
                    <h5 class="card-title">Dotations</h5>
                    <CarriereDotations Item="@Carriere"/>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col@(Carriere.Filieres.Count <= Carriere.Debouches.Count ? "-5" : "-7")">
                @if (Carriere.Filieres.Any() || Carriere.EstUneCarriereAvancee == false)
                {
                    <div class="card-body">
                        <h5 class="card-title">Filières</h5>
                        <CarriereItemList Items="@Carriere.Filieres.ToArray()"/>
                        @if (Carriere.EstUneCarriereAvancee == false)
                        {
                            <CarriereDeBase/>
                        }
                    </div>
                }
            </div>
            <div class="col@(Carriere.Filieres.Count <= Carriere.Debouches.Count ? "-7" : "-5")">
                <div class="card-body">
                    <h5 class="card-title">Débouchés</h5>
                    <CarriereItemList Items="@Carriere.Debouches.ToArray()"/>
                </div>
            </div>
        </div>
    </div>
    
</div>