@page "/carrieres/{CarriereId}/"

@using BlazorWjdr.Components.Carriere

<MainTopRow>
    <h3>@Carriere.Nom</h3>
</MainTopRow>

<div class="content px-4">

    <div class="_container">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <CarriereRestriction Item="@Carriere"/>
            </div>
            <div class="col-1"></div>
        </div>

        <div class="row">
            <div class="col-5">
                <div class="card-body">
                    <CarriereDescription Item="@Carriere"/>
                </div>
            </div>
            <div class="col-7">
                <div class="card-body">
                    <h5 class="card-title">Plan de carrière</h5>
                    <Profil PlanDeCarriere="@Carriere.PlanDeCarriere"/>
                </div>

                <div class="card-body">
                    <CompetencesEtTalents Carriere="@Carriere"/>
                </div>
                
                <div class="card-body">
                    <CarriereDotations Item="@Carriere"/>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col@(Carriere.Filieres.Count <= Carriere.Debouches.Count ? "-5" : "-7")">
                @if (Carriere.Filieres.Any() || Carriere.EstUneCarriereAvancee == false)
                {
                    <div class="card-body">
                        <CarriereItemList Title="Filières" Items="@Carriere.Filieres.ToArray()"/>
                        @if (Carriere.EstUneCarriereAvancee == false)
                        {
                            <CarriereDeBase/>
                        }
                    </div>
                }
            </div>
            <div class="col@(Carriere.Filieres.Count <= Carriere.Debouches.Count ? "-7" : "-5")">
                <div class="card-body">
                    <CarriereItemList Title="Débouchés" Items="@Carriere.Debouches.ToArray()"/>
                </div>
            </div>
        </div>
    </div>
    
</div>