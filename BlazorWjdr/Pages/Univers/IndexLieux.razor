@page "/lieux"

@using BlazorWjdr.Models
@using BlazorWjdr.Services
@using BlazorWjdr.Components.Lieu

@inject LieuxService _lieuxService

<MainTopRow Title="Lieux"/>

<div class="content px-4">
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th style="width:400px;">Nom</th>
            <th style="width:200px;">Type</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var lieu in _lines.Where(l => l.ParentsCount == 1).OrderBy(r => r.Nom))
        {
            <LieuRow Item="@lieu"/>
        }
        </tbody>
    </table>
</div>


@code {
    private List<LieuDto> _lines = null!;

    protected override void OnInitialized()
    {
        _lines = _lieuxService.AllLieux;
    }

}