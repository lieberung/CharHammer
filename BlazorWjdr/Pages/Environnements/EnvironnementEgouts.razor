@page "/environnement/egouts/"

@using BlazorWjdr.Components.Aptitude
@using BlazorWjdr.Components.Carriere
@using BlazorWjdr.Components.Regle
@using BlazorWjdr.Components.Table

@inject AptitudesService _aptitudesService
@inject ReglesService _reglesService
@inject TablesService _tablesService
@inject AppState _appState
@code {
    protected override void OnInitialized()
    {
        _appState.SetMainTopRowTitle("Environnement : Les égouts");
    }
}
<div class="row">
    <div class="col px-0">
        <div class="section">
            <h3>Aptitudes utiles dans les égouts</h3>
            <AptitudeItemList Items=@_reglesService.GetRegle(240).Aptitudes />
        </div>
        <RegleBody Item=@_reglesService.GetRegle(246) />
        <RegleBody Item=@_reglesService.GetRegle(245) />
    </div>
    <div class="col px-0">
        <RegleBody Item=@_reglesService.GetRegle(244) />
        <RegleBody Item=@_reglesService.GetRegle(243) />
        <img class="section position-absolute" alt="Plans des égouts" src="images/plans/egouts.png" />
    </div>
    <div class="col px-0">
        <RegleBody Item=@_reglesService.GetRegle(241) />
        <RegleBody Item=@_reglesService.GetRegle(242) />
    </div>
</div>

<PageSectionDivider />

<div class="row">
    <div class="col px-0">
        <div class="section">
            <h3>Idées de rencontres (1d100)</h3>
            <TableDetail Item=@_tablesService.GetTable(103) MasquerTitre=true />
        </div>
        <RegleBody Item=@_reglesService.GetRegle(252) />
        <RegleBody Item=@_reglesService.GetRegle(256) />
        <div class="section">
            <img class="mw-100" alt="Ambiance" src="images/ambiance/egouts.png" />
        </div>
    </div>
    <div class="col px-0">
        <RegleBody Item=@_reglesService.GetRegle(251) />
        <RegleBody Item=@_reglesService.GetRegle(253) />
        <RegleBody Item=@_reglesService.GetRegle(257) />
    </div>
    <div class="col px-0">
        <RegleBody Item=@_reglesService.GetRegle(255) />
        <RegleBody Item=@_reglesService.GetRegle(259) />
        <RegleBody Item=@_reglesService.GetRegle(258) />
        <RegleBody Item=@_reglesService.GetRegle(254) />
        <div class="section">
            <h3>Carrières familières avec les égouts</h3>
            <CarriereItemList Items=@_reglesService.GetRegle(240).Carrieres />
        </div>
    </div>
</div>
