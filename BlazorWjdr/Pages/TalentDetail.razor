@page "/talents/{TalentId}/"

@using BlazorWjdr.Components.Carriere
@using BlazorWjdr.Components.Aptitude
@using BlazorWjdr.Models
@using BlazorWjdr.Services

@inject CompTalentsEtTraitsService _cttService
@inject CarrieresService _carrieresService
@inject ArmesService _armesService

<MainTopRow/>

<div class="content px-4">

    <div class="row">
        
        <div class="col-6" style="padding-right: 0;">
            <div class="card-body" style="padding-top: 0; padding-right: 0;">
                
                <h1 class="card-title" style="font-size: xxx-large;">@Talent.Nom</h1>
                @if (!string.IsNullOrEmpty(Talent.Max))
                {
                    <p class="card-text">
                        <strong>Maximum</strong> : @Talent.Max
                    </p>
                }
                @if (!string.IsNullOrEmpty(Talent.Tests))
                {
                    <p class="card-text">
                        <strong>Tests</strong> : @Talent.Tests
                    </p>
                }
                <p class="card-text" style="text-align:justify;">
                    @Talent.Resume
                </p>
                <h3 class="card-title">Description</h3>
                <CardParagraphes Text="@Talent.Description"/>
                
                <h3 class="card-title">Compétences liées</h3>
                <p class="card-text">
                    @if (Talent.CompetencesLiees.Any())
                    {
                        <AptitudeItemList Items="@Talent.CompetencesLiees.ToArray()"/>    
                    }
                    else
                    {
                        <em>Aucune</em>
                    }
                </p>
                
            </div>
        </div>

        <div class="col-6">
            <div class="card-body" style="padding-top: 0; padding-right: 0;">
                
                <h3 class="card-title">Carrières proposant ce talent</h3>
                <p class="card-text">
                    <CarriereItemList Items="@_carrieres"/>
                </p>
                
            </div>
        </div>

    </div>

</div>
@code {
    [Parameter]
    public string TalentId { get; set; } = null!;

    private AptitudeDto Talent { get; set; } = null!;
    
    private CarriereDto[] _carrieres = null!;

    protected override void OnParametersSet()
    {
        Talent = _cttService.GetTalent(int.Parse(TalentId));
        _carrieres = _carrieresService.GetCarrieresProposant(Talent);
    }
}
