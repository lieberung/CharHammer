@using BlazorWjdr.Models
<a href="/competences/@Item.Id.ToString()/" class="btn btn-light btn-item" target="_blank">
    <span class="oi oi-target item-icon mr-1" aria-hidden="true"></span>
    @if (string.IsNullOrWhiteSpace(Item.ResumeComplet)) {
        @Item.Nom
    } else {
        <Tooltip Text="@("["+Item.CaracteristiqueAssociee+"] "+Item.ResumeComplet)">@Item.Nom</Tooltip>
    }
</a>
@code{
    [Parameter]
    public CompetenceDto Item { get; set; } = null!;
}