@code {
    [Parameter, EditorRequired] public ContactDeCampagneDto[] Items { get; set; } = null!;
    [Parameter] public int Index { get; set; }
}
@if (Items.Length > Index)
{
    <div class="row mt-3">
        <div class="col-6">
            <CampagneContactFiche Item=@Items[Index] />
        </div>
        <div class="col-6">
            @if (Items.Length > Index+1)
            {
                <CampagneContactFiche Item=@Items[Index+1] />
            }
        </div>
    </div>
}