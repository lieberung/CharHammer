@code{
    [Parameter] public bool AfficherLiens { get; set; }
    private string _icon = null!;

    protected override void OnParametersSet()
    {
        _icon = AfficherLiens ? "chevron-top" : "chevron-bottom";
        base.OnParametersSet();
    }
}
<h5 class="card-title" @onclick="_ => AfficherLiens = !AfficherLiens">
    <ItemIcon Icon="@_icon" Classes="ms-2"/>
    Présentation des Races Jouables
</h5>
@if (AfficherLiens)
{
    <p>
        <a href="univers/race/humains/" class="btn btn-sm btn-secondary">Humain</a>
        <a href="univers/race/halflings/" class="btn btn-sm btn-secondary">Halfling</a>
        <a href="univers/race/nains/" class="btn btn-sm btn-secondary">Nain</a>
        <a href="univers/race/gnomes/" class="btn btn-sm btn-secondary">Gnôme</a>
        <a href="univers/race/elfes-sylvains/" class="btn btn-sm btn-secondary">Elfe sylvain</a>
        <a href="univers/race/hauts-elfes/" class="btn btn-sm btn-secondary">Haut elfe</a>
    </p>
}