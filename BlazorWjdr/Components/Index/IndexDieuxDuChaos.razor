@code{
    [Parameter] public bool AfficherLiens { get; set; }
    private string _icon = null!;

    protected override void OnParametersSet()
    {
        _icon = AfficherLiens ? "chevron-top" : "chevron-bottom";
        base.OnParametersSet();
    }
}
<h5 @onclick="_ => AfficherLiens = !AfficherLiens">
    <ItemIcon Icon="@_icon" Classes="ms-2"/>
    Dieux du Chaos
</h5>
@if (AfficherLiens)
{
    <p>
        <a href="univers/pantheon/khorne/" class="mb-1 btn btn-sm btn-secondary">Khorne</a>
        <a href="univers/pantheon/nurgle/" class="mb-1 btn btn-sm btn-secondary">Nurgle</a>
        <a href="univers/pantheon/slaanesh/" class="mb-1 btn btn-sm btn-secondary">Slaanesh</a>
        <a href="univers/pantheon/tzeench/" class="mb-1 btn btn-sm btn-secondary">Tzeench</a>
    </p>
}