@using BlazorWjdr.Models
<a href="references/@Item.Id.ToString()/" class="btn btn-light btn-item">
    <span class="oi oi-book item-icon mr-1" aria-hidden="true"></span>
    <em>@Item.AnneeDePublication</em>
    @Item.Titre
    <!--em class="ml-2">(@Item.VersionStr)</em-->
    @if (!string.IsNullOrWhiteSpace(Page))
    {
        <strong class="ml-2">@Page</strong>
    }
</a>
@code
{
    [Parameter]
    public ReferenceDto Item { get; set; } = null!;

    [Parameter]
    public string Page { get; set; } = null!;
}
