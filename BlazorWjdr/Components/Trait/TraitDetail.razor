@using BlazorWjdr.Models
@using BlazorWjdr.Components.Aptitude

<h3 class="card-title">@Trait.Nom <em>(@Trait.CategSpeSexy)</em></h3>
<AptitudeItem Item="Trait"/>
@if (Trait.Contagieux != null)
{
    <p class="card-text">
        <strong>Contagieux : </strong>@(Trait.Contagieux ?? false ? "oui" : "non")
    </p>
}
<p class="card-text">
    @Trait.Description
</p>
@if (!string.IsNullOrWhiteSpace(Trait.Guerison))
{
    <p class="card-text">
        <strong>Guérison : </strong>@Trait.Guerison
    </p>
}

@code {

    [Parameter]
    public AptitudeDto Trait { get; set; } = null!;

}