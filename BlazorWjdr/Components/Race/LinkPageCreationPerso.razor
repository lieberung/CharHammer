<a href="regles/creation-de-personnage/@Race.Id/" class="mr-2 btn @_btnClass" style="width:90px;">@Race.NomMasculin</a>
@code {
    [Parameter]
    public Models.RaceDto Race { get; set; } = null!;
    [Parameter]
    public bool Actif { get; set; }

    private string _btnClass = "";

    protected override void OnParametersSet()
    {
        _btnClass = Actif ? "btn-primary" : "btn-secondary";
        base.OnParametersSet();
    }
}