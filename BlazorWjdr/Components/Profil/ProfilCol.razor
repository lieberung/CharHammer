<div class="col-profil col-profil-@(IsBonus ? "bonus" : "value")">
    @_cellContent
</div>
@code {
    [Parameter]
    public int Value { get; set; }
    [Parameter]
    public bool IsBonus { get; set; }

    [Parameter]
    public bool Pourcent { get; set; } = true;
    
    private string _cellContent = "";

    protected override void OnParametersSet()
    {
        if (Value == 0)
            _cellContent = "-";
        else if (IsBonus)
        {
            _cellContent = $"+{Value}";
            if (Pourcent)
                _cellContent += "%";
        }
        else
            _cellContent = Value.ToString();
        base.OnParametersSet();
    }
}