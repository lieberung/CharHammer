@using BlazorWjdr.Models
<div style="z-index: 0;">
    <div style="display:inline-block;">
        <ProfilHeaderRow/>
    </div>
    <div style="display:inline-block; padding-left: 5px;">
        <ProfilHeaderRowPartTwo/>
    </div>
</div>
@if (ProfilInitial != null)
{
    <div>
        <div style="display:inline-block;">
            <ProfilValueRow Profil="ProfilInitial"/>
        </div>
        <div style="display:inline-block; padding-left: 5px;">
            <ProfilValueRowPartTwo Profil="ProfilInitial"/>
        </div>
    </div>
}
@if (PlanDeCarriere != null)
{
    <div style="z-index: 100; position: relative; top: -5px;">
        <div style="display:inline-block;">
            <ProfilBonusRow Profil="PlanDeCarriere"/>
        </div>
        <div style="display:inline-block; padding-left: 5px;">
            <ProfilBonusRowPartTwo Profil="PlanDeCarriere"/>
        </div>
    </div>
}
@if (ProfilActuel != null)
{
    <div>
        <div style="display:inline-block;">
            <ProfilValueRow Profil="ProfilActuel"/>
        </div>
        <div style="display:inline-block; padding-left: 5px;">
            <ProfilValueRowPartTwo Profil="ProfilActuel"/>
        </div>
    </div>
}
@if (CaracteristiqueDeDepart != null)
{
    <div style="z-index: 100; position: relative; top: -5px;">
        <div style="display:inline-block;">
            <ProfilBonusRow Profil="CaracteristiqueDeDepart"/>
        </div>
        <div style="display:inline-block; padding-left: 5px;">
            <ProfilValueRowPartTwo Profil="CaracteristiqueDeDepart"/>
        </div>
    </div>
}

@code {
    [Parameter]
    public ProfilDto? ProfilInitial { get; set; }
    [Parameter]
    public ProfilDto? PlanDeCarriere { get; set; }
    [Parameter]
    public ProfilDto? ProfilActuel { get; set; }
    [Parameter]
    public ProfilDto? CaracteristiqueDeDepart { get; set; }    
}