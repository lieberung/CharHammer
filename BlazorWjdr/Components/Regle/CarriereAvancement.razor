<Tooltip Text="@_toolTip">
    <strong>Avancement</strong> de <CarriereItem Item="@Carriere" HideIndicatorBase="@true" HideIndicatorRestriction="@true" Special="@true"/>
</Tooltip>
@code{
    [Parameter]
    public CarriereDto Carriere { get; set; } = null!;

