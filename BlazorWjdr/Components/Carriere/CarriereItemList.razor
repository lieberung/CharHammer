<ul class="list-inline mb-0">
    @foreach (var carriere in Items.Where(c => SpecialCarriereId.Contains(c.Id)).OrderBy(c=>c.Nom))
    {
        <li class="@ItemClass"><CarriereItem Item="@carriere" HideIndicatorBase="@HideIndicatorBase" HideIndicatorRestriction="@HideIndicatorRestriction" Special=true/></li>
    }
    @foreach (var carriere in Items.Where(c => !SpecialCarriereId.Contains(c.Id)).OrderBy(c=>c.Nom))
    {
        <li class="@ItemClass"><CarriereItem Item="@carriere" HideIndicatorBase="@HideIndicatorBase" HideIndicatorRestriction="@HideIndicatorRestriction"/></li>
    }
</ul>
@code
{
    [Parameter] public string ItemClass { get; set; } = "list-inline-item";
    [Parameter, EditorRequired] public CarriereDto[] Items { get; set; } = null!;
    
    [Parameter] public bool HideIndicatorBase { get; set; }
    [Parameter] public bool HideIndicatorRestriction { get; set; }

    [Parameter] public int[] SpecialCarriereId { get; set; } = Array.Empty<int>();
}