@using BlazorWjdr.Components.Talent

<div>
    @for (int i = 0; i < _competences.Length; i++)
    {
        @if (i != 0)
        {
            <span>&nbsp;-&nbsp;</span>
        }
        <CompetenceItem Competence="_competences[i]"></CompetenceItem>
    }
    @for (int i = 0; i < _competencesChoix.Length; i++)
    {
        <span>&nbsp;-&nbsp;</span>
        <ChoixDeCompetenceItem Choix="_competencesChoix[i]"></ChoixDeCompetenceItem>
