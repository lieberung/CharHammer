            <span>&nbsp;-&nbsp;</span>
        }
        <TalentItem Talent="_talents[i]"></TalentItem>
    }
    @for (int i = 0; i < _talentsChoix.Length; i++)
    {
        <span>&nbsp;-&nbsp;</span>
        <ChoixDeTalentItem Choix="_talentsChoix[i]"></ChoixDeTalentItem>
