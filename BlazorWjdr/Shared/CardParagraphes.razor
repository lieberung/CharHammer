@foreach (var paragraphe in Text.Replace('\r', '\n').Replace("\n\n", "\n").Split('\n'))
{
    <p class="card-text @CardTextClass">
        @if (paragraphe.StartsWith("•"))
        {
            <strong>@paragraphe</strong>
        }
        else
        {
            @paragraphe
        }
    </p>
}
@code{
    [Parameter] public string Text { get; set; } = null!;
    [Parameter] public string CardTextClass { get; set; } = "";
}