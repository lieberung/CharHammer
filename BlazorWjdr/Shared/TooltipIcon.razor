<Tooltip Text="@Text">
    <ItemIcon Icon="@Icon" Classes="@Classes" Style="@Style" />
</Tooltip>
@code {
    [Parameter] public string Icon { get; set; } = "chat";
    [Parameter] public string Style { get; set; } = "font-size: 1em;";
    [Parameter] public string Classes { get; set; } = "";
    [Parameter] public string Text { get; set; } = null!;
}