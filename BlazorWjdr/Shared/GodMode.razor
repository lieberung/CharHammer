@using BlazorWjdr.Services

@inject AppState _appState

@code{
    private void OnPasswordChange(ChangeEventArgs args)
    {
        _appState.PretendreEtreUnDieu(Convert.ToString(args.Value) ?? string.Empty);
    }
}
<span class="ml-4" />
<OiLock Locked="@(!_appState.JeSuisDieu)"/>
<span class="mr-1" />
@if (!_appState.JeSuisDieu)
{
    <input placeholder="Password" @onchange="OnPasswordChange" style="width:5em;"/>
}