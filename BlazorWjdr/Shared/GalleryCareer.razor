<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    @foreach (var img in _images)
    {
      <div class="carousel-item active">
        <img class="d-block w-100" src="..@img slide" alt="@img.Alt" style="max-width: 300px; max-height: 450px;"/>
      </div>
    }
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

@code {
  [Parameter]
  public string[] Images { get; set; }

  private ImageHtml[] _images;
	
  public class ImageHtml
  {
    public ImageHtml(string img)
    {
      Id = img.Split('.')[0];
      Alt = img.Contains("-") ? img.Split('-')[1].Split('.')[0] : "Main";
      Src = $"/images/careers/{img}";
    }

    public string Id { get; init; }
    public string Src { get; init; }
    public string Alt { get; init; }
  }

  protected override void OnParametersSet()
  {
    foreach (var arr in Images)
    {
      _images = Images.Select(a => new ImageHtml(a)).ToArray();
    }
		
    base.OnParametersSet();
  }
}